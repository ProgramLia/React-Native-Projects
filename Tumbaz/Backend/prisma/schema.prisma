generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
   USER
   ADMIN
}

model User {
  id          String   @id @default(uuid()) @db.Uuid
  username    String
  email       String   @unique
  role        Role     @default(USER)
  password    String
  is_verified Boolean  @default(false)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
}